{
    "name": "thijmendf/groundwork",
    "description": "Groundwork, a lightweight PHP Framework",
    "keywords": ["framework", "groundwork"],
    "type": "library",
    "require": {
        "php": "^7.4|^8.0",
        "ext-mysqli": "*",
        "ext-json": "*",
        "altorouter/altorouter": "^2.0",
        "filp/whoops": "^2.14",
        "gladcodes/keygen": "^1.1",
        "intervention/image": "^2.6",
        "nesbot/carbon": "^2.50",
        "symfony/http-foundation": "^5.3",
        "symfony/mime": "^5.3",
        "symfony/var-dumper": "^5.3",
        "twig/twig": "^3.3",
        "vlucas/phpdotenv": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "Groundwork\\": "src/Groundwork/"
        },
        "files": [
            "Groundwork/Utils/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Thijmen de Frankrijker",
